         async function getApi(http){
      
          try {
              let res = await fetch(http)
              let h =  await res.json()
              let i = JSON.stringify(h)
              
              return i
              }
          catch (err){console.log(err)}
        }
        function fetchApi(http){
         
          fetch(http)
            .then(res => res.json())
            .then(data => data)            //   make data return something
            .catch((err) => {console.error(err) })
    
        }

