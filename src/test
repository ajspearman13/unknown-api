const background = props.type[0]
switch (background) {
  const ans= ""
  case "normal": '#A8A77A'; break;
	case "fire": '#EE8130'; break;
	case "water": '#6390F0' ; break;
	case "electric": '#F7D02C'; break;
	case "grass": '#7AC74C'; break;
	case "ice": '#96D9D6'; break;
	case "fighting": '#C22E28'; break;
	case "poison": '#A33EA1'; break;
	case "ground": '#E2BF65'; break;
	case "flying": '#A98FF3'; break;
	case "psychic": '#F95587'; break;
	case "bug": '#A6B91A'; break;
	case "rock": '#B6A136'; break;
	case "ghost": '#735797'; break;
	case "dragon": '#6F35FC'; break;
	case "dark": '#705746'; break;
	case "steel": '#B7B7CE'; break;
	case "fairy": '#D685AD'; break;
  default : "white"

}
function getColor(x){

  return (x === "normal") ? '#A8A77A'
  :(x === "fire") ? '#EE8130'
  :(x === "water") ? '#6390F0' 
  :(x === "electric") ? '#F7D02C'
  :(x=== "grass") ? '#7AC74C'
  :(x === "ice") ? '#96D9D6'
  :(x === "fighting") ? '#C22E28'
  :(x === "poison") ? '#A33EA1'
  :(x === "ground") ? '#E2BF65'
  :(x === "flying") ? '#A98FF3'
  :(x === "psychic") ? '#F95587'
  :(x === "bug") ? '#A6B91A'
  :(x === "rock") ? '#B6A136'
  :(x === "ghost") ? '#735797'
  :(x === "dragon") ? '#6F35FC'
  :(x === "dark") ? '#705746'
  :(x === "steel") ? '#B7B7CE'
  :(x === "fairy") ? '#D685AD'
  :"white"

}
 
  